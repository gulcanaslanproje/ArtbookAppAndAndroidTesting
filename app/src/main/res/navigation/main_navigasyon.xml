<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigasyon"
    app:startDestination="@id/artFragment">

    <fragment
        android:id="@+id/artFragment"
        android:name="com.example.artbooktesting.view.ArtFragment"
        android:label="ArtFragment" >
        <action
            android:id="@+id/action_artFragment_to_artDetailFragment"
            app:destination="@id/artDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/artDetailFragment"
        android:name="com.example.artbooktesting.view.ArtDetailFragment"
        android:label="ArtDetailFragment" >
        <action
            android:id="@+id/action_artDetailFragment_to_artImageApiFragment"
            app:destination="@id/artImageApiFragment" />
    </fragment>
    <fragment
        android:id="@+id/artImageApiFragment"
        android:name="com.example.artbooktesting.view.ArtImageApiFragment"
        android:label="ArtImageApiFragment" />
</navigation>